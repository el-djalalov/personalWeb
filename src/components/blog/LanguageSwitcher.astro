---
import { LANGUAGE_NAMES, type Language, SUPPORTED_LANGUAGES } from "@/content.config";

interface Props {
  currentLang: Language;
  availableLanguages: Language[];
  baseSlug: string;
}

const { currentLang, availableLanguages, baseSlug } = Astro.props;
---

{availableLanguages.length > 1 && (
  <div class="flex items-center gap-2">
    <svg class="w-4 h-4 text-slate-500 dark:text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
    </svg>
    <div class="flex rounded-lg border border-slate-200 dark:border-slate-700 overflow-hidden">
      {SUPPORTED_LANGUAGES.map((lang) => {
        const isAvailable = availableLanguages.includes(lang);
        const isCurrent = lang === currentLang;

        if (!isAvailable) return null;

        return (
          <a
            href={`/blog/${baseSlug}?lang=${lang}`}
            class:list={[
              "px-3 py-1.5 text-sm font-medium transition-colors",
              isCurrent
                ? "bg-violet-600 text-white"
                : "bg-slate-50 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700",
            ]}
            aria-current={isCurrent ? "true" : undefined}
          >
            {LANGUAGE_NAMES[lang]}
          </a>
        );
      })}
    </div>
  </div>
)}
