---
import { Image } from "astro:assets";

const { text, icon, src } = Astro.props;
---

<div
  class="flex flex-col gap-2 w-8 h-4 border border-dashed border-slate-700 bg-background"
>
  <Image
    src={src}
    height={12}
    width={12}
    quality={"high"}
    alt=`${text} icon`
    decoding="auto"
  />
  <div class="text-sm text-muted-foreground">
    {text}
  </div>
</div>
