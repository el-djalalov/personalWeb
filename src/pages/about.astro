---
import experiences from "../collections/experiences.json";
import AboutExperience from "../components/about-experience.astro";
import { BackgroundBeams } from "../components/bg-beams";
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="About Me">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <!--  <Code code={`const foo = 'bar';`} lang="js" theme="nord" /> -->
    <PageHeading
      title="About Me"
      description="Hello 👋 I'm a frontend engineer from Uzbekistan. I'm passionate about building new products and learning new technology."
    />

    <img
      src="/assets/images/about.jpg"
      class="relative z-30 w-full my-10 rounded-xl"
    />

    <h2 class="mb-2 text-2xl font-bold dark:text-slate-200">Short Bio</h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-slate-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      Front-end cutter 🧑🏻‍💻, back-end amateur 🤷🏻‍♂️, love solving problems.
    </p>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-slate-200"
    >
      Experience
    </h2>
    <div class="px-5 py-10">
      {
        experiences.map((experience, loop) => {
          return (
            <>
              {loop == 0 || loop == 1 ? (
                <div class="pb-10 border-l border-gray-200 dark:border-slate-700">
                  <AboutExperience
                    dates={experience.dates}
                    role={experience.role}
                    company={experience.company}
                    description={experience.description}
                    logo={experience.logo}
                  />
                </div>
              ) : (
                <AboutExperience
                  dates={experience.dates}
                  role={experience.role}
                  company={experience.company}
                  description={experience.description}
                  logo={experience.logo}
                />
              )}
            </>
          );
        })
      }
    </div>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-slate-200"
    >
      Let's Connect
    </h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-slate-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      If you want to stay up to date with my work be sure to<a
        href="https://www.t.me/elDevBlog"
        target="_blank"
        class="text-indigo-600 underline"
      >
        join my channel on Telegram</a
      >, or you can send me an <a
        href="mailto:edjalalov@hotmail.com"
        class="text-indigo-600 underline">email</a
      > and I'll be sure to get back to you.
    </p>
  </section>
</Layout>
