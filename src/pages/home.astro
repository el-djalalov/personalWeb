---
//import Button from "../components/button.astro";
import { Button } from "@/components/ui/button";
---

<div
  class="relative z-20 w-full max-w-5xl mx-auto mt-16 md:mt-24 lg:mt-20 xl:px-0 transition-all duration-1000"
>
  <div class="flex flex-col items-center md:flex-row justify-between">
    <div class="flex flex-col flex-1 elementAnimate">
      <h1
        class="flex flex-row mb-5 text-6xl font-bold leading-tight md:text-5xl lg:text-[110px]
bg-gradient-to-r from-cyan-900 via-fuchsia-800 to-blue-700 bg-clip-text text-transparent transition-all duration-300 ease-in-out"
      >
        Hi, I'm Elyor
      </h1>
      <p
        class="mb-6
        text-slate-800
        dark:text-slate-200
        text-xl"
      >
        I'm a front-end developer
      </p>
      <div class="flex gap-2">
        <p class="text-slate-800 dark:text-slate-200 text-lg">
          I am goot at: <p
            class="text-slate-800 dark:text-slate-200 font-semibold text-lg"
            id="typingElements"
          >
          </p>
        </p>
      </div>
      <a href="/assets/Resume.pdf" class="pt-4" download="Resume.pdf">
        <Button className="rounded-full"> Download resume </Button>
      </a>
    </div>

    <div class="relative hidden md:flex md:w-1/3">
      <div class="relative z-50 w-96 elementAnimate">
        <div
          class="absolute bottom-0 z-40 w-16 h-16 -translate-x-6 -translate-y-1/2 lg:top-auto top-0 lg:-translate-y-[330px] rounded-full"
        >
          <span
            class="elementAnimate relative z-20 flex items-center justify-center w-full h-full text-2xl border-8 border-white rounded-full dark:border-slate-950 bg-slate-100 dark:bg-slate-900/60 backdrop-blur-sm"
          >
            <span
              class="flex items-center justify-center w-full h-full bg-white border border-dashed rounded-full dark:bg-slate-950 backdrop-blur-sm border-slate-300 dark:border-slate-700"
              >ðŸ‘‹</span
            >
          </span>
        </div>
        <div class="relative z-30 px-2">
          <img
            src="/assets/images/AvatarMe.webp"
            loading="eager"
            decoding="auto"
            class="elementAnimate relative z-30 w-80 aspect-[790/1160] md:max-w-md mx-auto dark:-translate-y-0.5"
          />
        </div>
        <div
          class="absolute bottom-0 right-0 z-20 w-full h-full lg:h-[420px] translate-x-0 -translate-y-px border border-dashed rounded-2xl bg-gradient-to-r dark:from-slate-950/60 dark:via-black/40 dark:to-slate-950/60 from-white via-slate-50 to-white border-slate-300 dark:border-slate-700"
        >
        </div>
      </div>
    </div>
  </div>
</div>
